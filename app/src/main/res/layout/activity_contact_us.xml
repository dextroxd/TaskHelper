<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AboutUs"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/psb"
        android:text="Contact us:"
        android:textSize="24sp"
        android:layout_margin="16dp"
        android:textColor="@color/colorPrimary"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/psb"
        android:text="In case of any queries or feedback contact us:"
        android:textSize="20sp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/colorPrimary"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/psb"
        android:text="9920680046"
        android:textSize="20sp"
        android:layout_margin="16dp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/number_contact"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/psb"
        android:text="thetaskhelper@gmail.com"
        android:textSize="20sp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/mail_contact"
        />
</LinearLayout>