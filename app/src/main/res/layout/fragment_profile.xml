<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbarpro"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/appbargrad"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextAppearance="@font/psb"
        android:layout_alignParentTop="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_centerVertical="true"
                android:text="@string/profile"
                android:fontFamily="@font/psb"
                android:textColor="@color/dot_active2"
                android:layout_alignParentLeft="true"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/my_toolbarpro">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Profileview"
            android:background="@color/colorAccent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_person_black_24dp"
                android:tint="#000"
                android:scaleType="centerCrop"
                android:id="@+id/profileimage"/>
            <ImageButton
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/edit24"
                android:id="@+id/editprofile"
                android:foreground="?selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/psr"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:layout_toRightOf="@id/profileimage"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/nampelace"
                android:layout_gravity="fill"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/psb"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:layout_margin="16dp"
                android:id="@+id/emailidlogedin"
                android:layout_below="@id/nampelace"
                android:layout_toRightOf="@id/profileimage"
                android:layout_gravity="fill"
                android:baselineAligned="false"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/Profileview"
            android:orientation="vertical"
            android:id="@+id/Wholeprofile">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:id="@+id/HelpCenter">
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/help24"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/psr"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/help"
                    android:gravity="center_vertical"
                    android:textSize="16sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@id/HelpCenter"
                android:background="@color/colorAccent"
                android:id="@+id/emptyview1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:id="@+id/aboutus1"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/aboutus"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/psr"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/about"
                    android:gravity="center_vertical"
                    android:textSize="16sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@id/aboutus1"
                android:background="@color/colorAccent"
                android:id="@+id/emptyview2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:id="@+id/sharelink"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/share24"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/psr"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/share"
                    android:gravity="center_vertical"
                    android:textSize="16sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@id/sharelink"
                android:background="@color/colorAccent"
                android:id="@+id/emptyview3"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:id="@+id/rateus"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/rate24"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/psr"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/rateus"
                    android:gravity="center_vertical"
                    android:textSize="16sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/colorAccent"
                android:id="@+id/emptyview4"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:id="@+id/logout1"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/logout24"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/psr"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/logout"
                    android:gravity="center_vertical"
                    android:textSize="16sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@id/logout1"
                android:background="@color/colorAccent"
                android:id="@+id/emptyview5"/>
        </LinearLayout>
    </RelativeLayout>
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        android:elevation="8dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:contentPadding="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/versionno"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/psb"/>
    </android.support.v7.widget.CardView>
</RelativeLayout>