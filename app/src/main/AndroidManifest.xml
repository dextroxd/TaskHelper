<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dextroxd.taskhelper">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/taskhelperlogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/taskhelperlogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.WelcomeActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="400c9e96386c6883b8d4870e40bac72ed56bff91" />

        <activity
            android:name=".activity.SplashScreen"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme1" />
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.ServiceActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".login.SignupActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".login.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".login.ResetPasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.BookNow"
            android:screenOrientation="portrait" />
        <activity
            android:name=".login.VerificationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.EditProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.CancellingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.Airconditioning"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.AboutUs"
            android:screenOrientation="portrait" />
        <activity android:name=".ContactUs"></activity>
    </application>

</manifest>